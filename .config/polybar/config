[bar/top]
monitor = eDP-1
width = 100%
height = 25

background = ${module/colors.generated1}
foreground = ${module/colors.generated7}

line-size = 3

spacing = 2
padding-right = 2
module-margin = 4

font-0 = NotoSans-Regular:size=8;2
font-1 = MaterialIcons:size=10;2
font-2 = Termsynu:size=8:antialias=false;2
font-3 = FontAwesome:size=10;2

modules-left = i3
modules-center = date
modules-right = pacman volume backlight wireless-network wired-network

[module/colors]
generated1 = ${xrdb:generated1:#000000}
generated2 = ${xrdb:generated2:#111111}
generated3 = ${xrdb:generated3:#222222}
generated4 = ${xrdb:generated4:#333333}
generated5 = ${xrdb:generated5:#444444}
generated6 = ${xrdb:generated6:#777777}
generated7 = ${xrdb:generated7:#999999}
generated8 = ${xrdb:generated8:#bbbbbb}
generated9 = ${xrdb:generated9:#dddddd}
generated10 = ${xrdb:generated10:#ffffff}
error = #660000

[module/i3]
type = internal/i3

pin-workspaces = false
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = true

format = <label-state> <label-mode>

label-focused = %index%
label-focused-foreground = ${module/colors.generated8}
label-focused-background = ${module/colors.generated2}
label-focused-underline = ${module/colors.generated6}
label-focused-padding = 4

label-unfocused = %index%
label-unfocused-padding = 4

label-visible = %index%
label-visible-underline = ${module/colors.generated4}
label-visible-padding = 4

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/date]
type = internal/date
date = %Y-%m-%d  %H:%M
date-alt = %A, %d %B %Y  %H:%M:%S

format-foreground = ${module/colors.generated8}

[module/pacman]
type = custom/script
interval = 1200
format = <label>
format-underline = ${module/colors.error}
label = "%output:0:30%"
exec = "~/.config/polybar/pkg"
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/volume]
type = internal/volume
speaker-mixer = Speaker
headphone-mixer = Headphone
headphone-id = 9

format-volume = <ramp-volume> <label-volume>
label-muted =   muted
label-muted-foreground = ${module/colors.generated6}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/backlight]
type = internal/xbacklight
format = <ramp> <bar>

ramp-0 = 
ramp-1 = 
ramp-2 = 

bar-width = 10
bar-indicator = |
bar-indicator-font = 3
bar-indicator-foreground = #ff
bar-fill = ─
bar-fill-font = 3
bar-fill-foreground = ${module/colors.generated7}
bar-empty = ─
bar-empty-font = 3
bar-empty-foreground = ${module/colors.generated3}

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-disconnected =    not connected
label-disconnected-foreground = ${module/colors.error}

ramp-signal-0 = ▁
ramp-signal-1 = ▂
ramp-signal-2 = ▃
ramp-signal-3 = ▄
ramp-signal-4 = ▅
ramp-signal-5 = ▆
ramp-signal-6 = ▇
ramp-signal-7 = █

[module/wired-network]
type = internal/network
interface = tun0
interval = 3.0

label-connected = VPN
label-disconnected = VPN
label-disconnected-foreground = ${module/colors.error}
